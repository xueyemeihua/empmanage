<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!--    引入数据源-->
    <properties resource="jdbc.properties"/>

    <!--    类型别名-->
    <typeAliases>
        <package name="cn.ly.managesys.pojo"/>
    </typeAliases>

    <!--    数据库环境-->
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${data.driver}"/>
                <property name="url" value="${data.url}"/>
                <property name="username" value="${data.username}"/>
                <property name="password" value="${data.password}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <package name="cn.ly.managesys.mapper"/>
    </mappers>

</configuration>